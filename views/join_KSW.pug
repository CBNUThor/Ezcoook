        // Owl Carousel
        link(href='../public/plugins/owl-carousel/assets/owl.carousel.min.css', rel='stylesheet', media='screen')
        // Owl Carousel Theme
        link(href='../public/plugins/owl-carousel/assets/owl.theme.green.min.css', rel='stylesheet', media='screen')
