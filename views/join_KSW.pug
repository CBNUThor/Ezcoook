    body.body-wrapper
        include components/topHeader_KSW
        include components/navBar_KSW
        //
          ================================
          =            Page Title            =
          =================================
        section.logIn.section
            .container
                .row.justify-content-center
                    .col-md-7.col-lg-8.col-xl-7.col-12
                        .panel
                            .panel-heading
                                h3 Join
                            .panel-body
                                form(action='', method='POST', role='form')
                                    .form-group
                                        label(for='') Lastname
                                        input#lastname.form-control(type='email', name='lastname')
                                    .form-group
                                        label(for='') Firstname
                                        input#firstname.form-control(type='email', name='firstname')
                                    .form-group
                                        label(for='') Enter Email
                                        input#email.form-control(type='email', name='email')
                                    .form-group
                                        label(for='') Password
                                        input#password.form-control(type='password', name='password', placeholder='a~z / 0~9 / ~!@#$%   Max 15 digits!')
                                    .form-group
                                        label(for='') Password confirm
                                        input#pw_confirm.form-control(type='password', name='pw_confirm')
                                    button.btn.btn-primary.btn-block(type='submit') join
                                    .wrapper
                                        .d-block.social-login.text-center.one
                                            button.btn.btn-social.titled.naver
                                                | join with naver
                                        .d-block.social-login.text-center.two
                                            button.btn.btn-social.titled.kakao
                                                | join with kakao
                                        .d-block.social-login.text-center.three
                                            button.btn.btn-social.titled.google
                                                | join with google

        include components/footer_KSW

